<p id="notice"><%= notice %></p>
<%= form_tag(hotels_path, :method => :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Digite o nome do Hotel...' %>
  <%= submit_tag "search" %>
<% end %>


<h1>Hotels Avaliable</h1>

<table>
   <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Roomlist</th>
      <th>Localization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.category %></td>
        <td><%= hotel.roomlist %></td>
        <td><%= hotel.localization %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
